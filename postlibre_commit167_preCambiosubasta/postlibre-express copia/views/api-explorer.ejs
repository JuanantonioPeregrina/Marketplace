    <div class="card-body">
      <input type="text" id="autoId" class="form-control mb-2" placeholder="ID del anuncio">
      <input type="number" id="precioMaximo" class="form-control mb-2" placeholder="Precio M√°ximo de la Puja">
      <button class="btn btn-primary" id="ofertarAuto">Ofertar Autom√°ticamente</button>
