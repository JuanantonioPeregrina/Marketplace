<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100 min-h-screen">

    <%- include('partials/header') %>

    <div class="container mx-auto px-4 mt-10">
        <h1 class="text-3xl font-bold mb-6 text-center">游논 Gesti칩n de Usuarios</h1>

        <div class="overflow-x-auto">
            <table class="table-auto w-full bg-white shadow-md rounded-lg overflow-hidden">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="px-4 py-2 text-left">ID</th>
                        <th class="px-4 py-2 text-left">Correo Electr칩nico</th>
                        <th class="px-4 py-2 text-left">Nombre</th>
                        <th class="px-4 py-2 text-left">Contrase침a</th>
                        <th class="px-4 py-2 text-center">Es Admin</th>
                        <th class="px-4 py-2 text-center">Baneado</th>
                        <th class="px-4 py-2 text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% usuarios.forEach(usuario => { %>
                        <tr class="hover:bg-gray-100">
                            <td class="px-4 py-2 text-sm text-gray-800"><%= usuario._id %></td>
                            <td class="px-4 py-2 text-sm"><%= usuario.email %></td>
                            <td class="px-4 py-2 text-sm"><%= usuario.username %></td>
                            <td class="px-4 py-2 text-sm truncate max-w-xs"><%= usuario.password %></td>
                            <td class="px-4 py-2 text-center"><%= usuario.rol === 'admin' ? 'S칤' : 'No' %></td>
                            <td class="px-4 py-2 text-center"><%= usuario.baneado ? 'S칤' : 'No' %></td>
                            <td class="px-4 py-2 text-center">
                                <% if (!usuario.baneado) { %>
                                    <form action="/gestion-usuarios/banear" method="POST" class="inline">
                                        <input type="hidden" name="id" value="<%= usuario._id %>">
                                        <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">Banear</button>
                                    </form>
                                <% } else { %>
                                    <span class="text-red-600 font-semibold">Baneado</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
