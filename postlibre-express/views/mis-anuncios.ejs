<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Mis Anuncios</title>
  <link rel="stylesheet" href="/css/styleA.css">
</head>
<body class="flex flex-col min-h-screen bg-gray-100">
  <%- include("partials/header") %>

  <main class="flex-grow max-w-5xl mx-auto p-6 mt-8">
    <h1 class="text-3xl font-bold mb-8 text-center">Mis Anuncios</h1>

    <!-- Anuncios publicados -->
    <section class="bg-white rounded-lg shadow p-6 mb-10 border">
      <h2 class="text-2xl font-semibold mb-4 border-b pb-2">Publicados por mí</h2>
      <% if (publicados.length === 0) { %>
        <p class="text-gray-500">No has publicado ningún anuncio todavía.</p>
      <% } else { %>
        <ul class="space-y-4 mt-4">
          <% publicados.forEach(a => { %>
            <li class="p-4 bg-gray-50 border rounded">
              <h3 class="text-lg font-semibold mb-1"><%= a.titulo %></h3>
              <p><strong>Categoría:</strong> <%= a.categoria %></p>
              <p><strong>Estado:</strong> <%= a.estadoSubasta %></p>
              <a href="/anuncios/<%= a._id %>" class="text-blue-600 underline mt-2 inline-block">Ver anuncio</a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </section>

    <!-- Anuncios participando -->
    <section class="bg-white rounded-lg shadow p-6 mb-10 border">
      <h2 class="text-2xl font-semibold mb-4 border-b pb-2">Estoy participando</h2>
      <% if (participando.length === 0) { %>
        <p class="text-gray-500">No estás participando en ningún anuncio.</p>
      <% } else { %>
        <ul class="space-y-4 mt-4">
          <% participando.forEach(a => { %>
            <li class="p-4 bg-gray-50 border rounded">
              <h3 class="text-lg font-semibold mb-1"><%= a.titulo %></h3>
              <p><strong>Autor:</strong> <%= a.autor %></p>
              <p><strong>Estado:</strong> <%= a.estadoSubasta %></p>
              <a href="/anuncios/<%= a._id %>" class="text-blue-600 underline mt-2 inline-block">Ver anuncio</a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </section>

    <!-- Favoritos -->
    <section class="bg-white rounded-lg shadow p-6 mb-10 border">
      <h2 class="text-2xl font-semibold mb-4 border-b pb-2">Mis favoritos</h2>
      <% if (favoritos.length === 0) { %>
        <p class="text-gray-500">No has marcado ningún anuncio como favorito.</p>
      <% } else { %>
        <ul class="space-y-4 mt-4">
          <% favoritos.forEach(a => { %>
            <li class="p-4 bg-gray-50 border rounded">
              <h3 class="text-lg font-semibold mb-1"><%= a.titulo %></h3>
              <p><strong>Categoría:</strong> <%= a.categoria %></p>
              <p><strong>Ubicación:</strong> <%= a.ubicacion %></p>
              <p><strong>Publicado por:</strong> <%= a.autor %></p>
              <a href="/anuncios/<%= a._id %>" class="text-blue-600 underline mt-2 inline-block">Ver anuncio</a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </section>
  </main>

  <%- include("partials/footer") %>
</body>
</html>
